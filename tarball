#!/bin/bash -e

version=$( date +%Y-%m-%d-%H-%M-%S )

echo $version
echo $version > VERSION

files="
  README
  VERSION
  tarball
  sord
  f/
  m/
  in/
"

mkdir sord-$version

cp -al $files sord-$version/

tar zcf sord.tgz sord-$version/

rm -rf sord-$version

if [ "x$1" = x-s ]; then cp sord.tgz save/sord-$version.tgz; fi

