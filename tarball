#!/bin/bash -e

version=sord-$( date +%Y-%m-%d-%H-%M-%S )

echo $version
echo $version > VERSION

ln -s . $version

files="
  $version/README
  $version/VERSION
  $version/sord
  $version/tarball
  $version/remote
  $version/sord.m
  $version/defaults.m
  $version/in.m
  $version/infiles
  $version/f
  $version/m
"

tar chf - $files | gzip > sord.tgz

rm $version

if [ "x$1" = "x-s" ]; then cp sord.tgz save/$version.tgz; fi

