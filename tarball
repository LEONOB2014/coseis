#!/bin/bash -e

version=sord-$( date +%Y-%m-%d-%H-%M-%S )

echo $version
echo $version > VERSION

ln -s . $version

files="
  $version/README
  $version/VERSION
  $version/sord
  $version/tarball
  $version/remote
  $version/defaults.m
  $version/in.m
  $version/in
  $version/f
  $version/m
  $version/viz
  $version/scripts
"

rm -f f/*.mod

tar cf - $files | gzip > sord.tgz

rm $version

if [ "x$1" = "x-s" ]; then
  cp sord.tgz save/$version.tgz
fi

