#!/bin/bash -e

version=$( date +%Y-%m-%d-%H-%M-%S )

echo $version
echo $version > VERSION

files="
  README
  VERSION
  in
  in.*
  sord
  tarball
  f/
  m/
"

mkdir sord-$version

cp -al $files sord-$version/

tar zcf sord.tgz sord-$version/

rm -rf sord-$version

[ "x$1" = x-s ] && cp sord.tgz save/sord-$version.tgz

