{
    "account": "GroundMotion_esp", 
    "depend_flag": "--dependenices {depend}", 
    "host_opts": {
        "challenger": {
            "maxnodes": 512, 
            "maxtime": 60, 
            "queue": "prod-devel"
        }, 
        "intrepid": {
            "maxnodes": 40960, 
            "maxtime": 1440, 
            "queue": "prod"
        }, 
        "surveyor": {
            "maxnodes": 1024, 
            "maxtime": 60, 
            "queue": "default"
        }
    }, 
    "launch": "cobalt-mpirun -mode smp -verbose 2 -np {nproc} -env OMP_NUM_THREADS={nthread} {command}", 
    "maxcores": 4, 
    "maxram": 2048, 
    "notify_flag": "-M {email}", 
    "nthread": 4, 
    "ppn_range": [
        1
    ], 
    "submit": "qsub --mode script -O {name} -A {account} -q {queue} -n {nodes} -t {minutes} {notify_flag} {depend_flag} {submit_flags} \"{name}.sh\""
}
