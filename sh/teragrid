#!/bin/bash -e

if [ $( /bin/pwd | grep -v gpfs ) ]; then
  echo "Error: jobs must be run from /gpfs"
  exit
fi

cat << END > run
#!/bin/bash -e
if ! grep -q "\$HOSTNAME" mf; then
  echo "Error: interactive jobs must be launched from the following hosts:"
  sed 's/^/  /; s/:2//' mf
  exit
fi
cd "$rundir"
echo "\$( date ): Start $code" >> log
$pre
case "\${1:--i}$mode" in
  -is) $bin ;;
  -gs) totalview $bin ;;
  -bs) nohup $bin > out.log & :; pid=\$! ;;
  -ip) mpirun -machinefile mf -np $np $bin ;;
  -gp) mpirun -tv -machinefile mf -np $np $bin ;;
  -bp) nohup mpirun -machinefile mf -np $np $bin > out.log & :; pid=\$! ;;
esac
if [ "\$pid" ]; then
  echo "Background job started with PID \$pid" >> log
  echo "Background job started with PID \$pid"
else :
  $post
fi
echo "\$( date ): Finish $code" >> log
END

cat << END > mf
tg-c127:2
tg-c128:2
tg-c129:2
tg-c130:2
END

cat << END > que
#!/bin/bash
cd "$rundir"
echo "\$( date ): Job qued with ID: \$( qsub script )" >> log
END

cat << END > script
#!/bin/bash
#PBS -N $code-$count
#PBS -l walltime=$walltime
#PBS -l nodes=$nodes:ppn=$ppn
#PBS -q dque
#PBS -M $email
#PBS -m abe
#PBS -V
cd "$rundir"
echo "\$( date ): Start $code" >> log
$pre
mpirun -machinefile \$PBS_NODEFILE -np $np $bin
$post
echo "\$( date ): Finish $code" >> log
END

chmod u+x run que script

