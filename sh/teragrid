#!/bin/bash -e

if [ $( /bin/pwd | grep -v gpfs ) ]; then
  echo "Error: jobs must be run from /gpfs"
  exit
fi

cat << END > run
#!/bin/bash -e
cd "$rundir"
echo "\$( date ): $code started" >> log
$pre
case "\${1:--i}$mode" in
  -is) $bin ;;
  -gs) totalview $bin ;;
  -bs) nohup $bin > out.log & :; pid=\$! ;;
  -ip) mpirun -machinefile mf -np $np $bin ;;
  -gp) mpirun -tv -machinefile mf -np $np $bin ;;
  -bp) nohup mpirun -machinefile mf -np $np $bin > out.log & :; pid=\$! ;;
esac
if [ "\$pid" ]; then
  echo "\$( date ): $code started with PID: \$pid" >> log
  echo "$code started with PID: \$pid"
else :
  $post
  echo "\$( date ): $code finished" >> log
fi
END

cat << END > mf
tg-c127:2
tg-c128:2
tg-c129:2
tg-c130:2
END

cat << END > que
#!/bin/bash
cd "$rundir"
echo "\$( date ): $code qued with ID: \$( qsub script )" >> log
END

cat << END > script
#!/bin/bash
#PBS -N $code-$count
#PBS -l walltime=$walltime
#PBS -l nodes=$nodes:ppn=$ppn
#PBS -q dque
#PBS -M $email
#PBS -m abe
#PBS -V
cd "$rundir"
echo "\$( date ): $code started" >> log
$pre
mpirun -machinefile \$PBS_NODEFILE -np $np $bin
$post
echo "\$( date ): $code finished" >> log
END

chmod u+x run que script

