#!/bin/bash -e

cat << END > run-$name
#!/bin/bash
log="$rundir/log"
echo "\$( date ): Start $name" >> "\$log"
$pre
case \${1:?} in
  -i) mpirun -machinefile mf -np $np $bin ;;
  -g) mpirun -machinefile mf -np $np -dbg=gdb $bin ;;
  -b) nohup mpirun -machinefile mf -np $np $bin > out.log & :; pid=\$!
      echo "Background job started with PID: \$pid" >> "\$log"
      echo "Background job started with PID: \$pid" ;;
esac
$post
echo "\$( date ): Finish $name" >> "\$log"
END

cat << END > mf
node39:4
node40:4
node41:4
node42:4
node43:2
node44:2
node45:4
node46:2
node47:2
node48:2
node49:2
END

cat << END > que-$name
#!/bin/bash
echo "\$( date ): Job qued with ID: \$( qsub script-$name )" >> log
END

cat << END > script-$name
#!/bin/bash
#PBS -N $name-$count
#PBS -l nodes=$nodes:ppn=$ppn
#PBS -l walltime=$walltime
#PBS -q workq
#PBS -M $email
#PBS -m abe
#PBS -V
sleep 2
log="$rundir/log"
echo "\$( date ): Start $name" >> "\$log"
$pre
mpiexec -n $np $bin
$post
echo "\$( date ): Finish $name" >> "\$log"
END

chmod u+x run-$name que-$name script-$name

