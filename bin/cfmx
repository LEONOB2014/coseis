#!/usr/bin/env python
#!/usr/bin/env ipython --gui=wx -i --
import sys, getopt
import cst

cat = cst.cfm.catalog()
opts, argv = getopt.getopt(sys.argv[1:], 's:')
opts = dict(opts)
if '-s' in opts:
    split = int(opts['-s'])
    prefix, faults = cst.cfm.search(cat, argv, split)
else:
    prefix, faults = cst.cfm.search(cat, argv)
cst.cfm.explore(prefix, faults, cat)

